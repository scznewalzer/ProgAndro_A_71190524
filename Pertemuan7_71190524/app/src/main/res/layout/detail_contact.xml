<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/tvPerson"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#c0c0c0"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_baseline_person_24"/>

    <TextView
        android:id="@+id/TextNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPerson"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="#000"
        android:textColorHint="#c5c5c5" />

    <ImageView
        android:id="@+id/ivChat"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="60dp"
        android:layout_below="@id/TextNama"
        android:src="@drawable/ic_baseline_chat_bubble_24"/>

    <ImageView
        android:id="@+id/ivCall"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/TextNama"
        android:layout_toRightOf="@id/ivChat"
        android:src="@drawable/ic_baseline_call_24"/>

    <ImageView
        android:id="@+id/ivVideo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/TextNama"
        android:layout_toRightOf="@id/ivCall"
        android:src="@drawable/ic_baseline_videocam_24"/>

    <ImageView
        android:id="@+id/ivMail"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/TextNama"
        android:layout_toRightOf="@id/ivVideo"
        android:src="@drawable/ic_baseline_email_24"/>

    <TextView
        android:id="@+id/tvNoHp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivChat"
        android:background="#fff"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:textColorHint="#c5c5c5"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNoHp"
        android:background="#fff"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:textColorHint="#c5c5c5"
        android:textColor="#000"/>




</RelativeLayout>